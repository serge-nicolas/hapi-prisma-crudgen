{
  "name": "hapi-prisma-crud",
  "version": "0.0.1",
  "main": "./sample.ts",
  "author": "Serge NICOLAS",
  "license": "MIT",
  "decription": "POC of scheama first CMS build around HapiJS, Prisma, PUG, Tailwind",
  "engines": {
    "node": ">=18",
    "yarn": ">=4"
  },
  "private": true,
  "keywords": [
    "CRUD",
    "HapiJS",
    "Prisma",
    "Typescript",
    "NodeJS"
  ],
  "imports": {
    "#/*": "./lib/*"
  },
  "scripts": {
    "dev:start": "ts-node-dev ./sample.ts --esm",
    "dev:start:nodemon": "nodemon",
    "dev:generate:prisma": "npx prisma-compositor ./schema/fragments/ ./schema/base/ ./schema/enums/ ./schema/resources/ compiled-schema.prisma && prisma format && prisma generate",
    "prod:build": "rimraf ./build && tsc-node && tailwindcss -i ./view/css/index.css -o ./dist/assets/all.css",
    "dev:generate:css": "tailwindcss -i ./lib/view/css/index.css -o ./dist/assets/all.css --watch",
    "dev:test:crud": "jest --config jest.config.ts",
    "build": "tsc"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.2",
    "@hapi/inert": "^7.1.0",
    "@hapi/jwt": "^3.2.0",
    "@hapi/nes": "^13.0.1",
    "@hapi/vision": "^7.0.3",
    "@hapi/wreck": "^18.0.1",
    "@prisma/client": "^5.7.1",
    "@types/hapi__nes": "^11.0.7",
    "axios": "^1.6.2",
    "blipp": "^4.0.2",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "hapi-auth-jwt2": "^10.4.0",
    "hapi-dev-errors": "^4.0.0",
    "i18next": "^23.7.6",
    "i18next-http-middleware": "^3.5.0",
    "joi": "^17.11.0",
    "postcss": "^8.4.32",
    "postcss-import": "^15.1.0",
    "pug": "^3.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "winston": "^3.11.0",
    "yaml-with-import": "^1.0.6",
    "yamljs": "^0.3.0",
    "youch": "^3.3.3",
    "youch-terminal": "^2.2.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.8.10",
    "@types/pug": "^2.0.8",
    "@types/yamljs": "^0.2.33",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.7.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "ts-jest": "29",
    "tsx": "^4.6.2"
  },
  "prisma": {
    "schema": "compiled-schema.prisma"
  }
}
